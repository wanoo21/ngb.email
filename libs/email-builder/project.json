{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/email-builder/src",
  "prefix": "ip",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["dist/libs/email-builder"],
      "options": {
        "project": "libs/email-builder/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/email-builder/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/email-builder/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/email-builder"],
      "options": {
        "jestConfig": "libs/email-builder/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/email-builder/**/*.ts",
          "libs/email-builder/**/*.html",
          "libs/email-builder/core/**/*.ts",
          "libs/email-builder/core/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
