{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [
      "@angular/localize",
    ],
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "exclude": ["src/test-setup.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts", "../../node_modules/@angular/localize/init/index.d.ts"]
}
