{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngcomma/ngx-abstract": [
        "libs/ngx-abstract/src/index.ts"
      ],
      "@ngcomma/ngx-abstract/*": [
        "libs/ngx-abstract/*/src/index.ts"
      ],
      "@wlocalhost/ngx-bootstrap-email-builder": [
        "libs/bootstrap-email-builder/src/index.ts"
      ],
      "@wlocalhost/ngx-email-builder": [
        "libs/ngx-email-builder/src/index.ts"
      ],
      "@wlocalhost/ngx-md-email-builder": [
        "libs/material-email-builder/src/index.ts"
      ],
      "@wlocalhost/ngx-primeng-email-builder": [
        "libs/primeng-email-builder/src/index.ts"
      ],
      "@wlocalhost/ngx-tailwind-email-builder": [
        "libs/tailwind-email-builder/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
